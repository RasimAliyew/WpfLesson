<Window x:Class="MVVM_Lesson.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Views="clr-namespace:MVVM_Lesson.View"
        xmlns:ViewModel="clr-namespace:MVVM_Lesson.ViewModel"
        xmlns:local="clr-namespace:MVVM_Lesson.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type ViewModel:LoginVM}">
            <Views:LoginUC/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:RegisterVM}">
            <Views:RegisterUC/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
        <Button Padding="15" Margin="30" Content="Register" />
        <Button Padding="15" Margin="30" Content="Login"/>
        </StackPanel>
        <ContentControl Grid.Row="0" Content="{Binding CurrentVM}"/>
    </Grid>
</Window>
