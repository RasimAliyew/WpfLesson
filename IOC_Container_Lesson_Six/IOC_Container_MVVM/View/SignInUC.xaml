<UserControl x:Class="IOC_Container_MVVM.View.SignInUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IOC_Container_MVVM.View"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Foreground="Red" Text="Sign In" FontSize="20"/>
            <TextBlock Text="Go To sign Up !" 
                       FontSize="40"
                       Foreground="GreenYellow"
                       />
            <Button Content="Sign Up !" 
                    FontSize="20" 
                    Margin="10"
                    Command="{Binding SignUpButton}"/>
        </StackPanel>
    </Grid>
</UserControl>
 